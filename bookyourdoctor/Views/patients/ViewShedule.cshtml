@model bookyourdoctor.doctor_scedule

@{
    ViewBag.Title = "ViewShedule";
}

<h2>ViewShedule</h2>



@{
    doctor dg = new doctor();

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <p>CLINIC NAME:@Html.DisplayFor(modelItem => dg.clinic_name)</p><br>
    <p>CLINIC ADDRESS:@Html.DisplayFor(modelItem => dg.clinic_address)</p><br>



    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>

                <th style="font-family:Arial;font-size:24px">DAY</th>
                <th style="font-family:Arial;font-size:24px">CLINIC OPEN TIME</th>
                <th style="font-family:Arial;font-size:24px">CLINIC CLOSE TIME</th>
                <th style="font-family:Arial;font-size:24px">APPOITMENT</th>

            </tr>
            @foreach (var item in lst.ToList())
            {
                <tr>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.c)</td>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.clinic_start_time</td>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.hospital_name)</td>
                    <td style="font-family:Arial;font-size:24px">@Html.ActionLink("Get Appoitment", "GetClinicAppoitment", "patients")</td>
                </tr>

            }

        </tbody>
    </table>

    <p>HOSPITAL NAME:@Html.DisplayFor(modelItem => dg.hospital_name)</p><br>
    <p>HOSPITAL ADDRESS:@Html.DisplayFor(modelItem => dg.hospital_address)</p><br>



    <table class="table table-bordered table-condensed">
        <tbody>
            <tr>

                <th style="font-family:Arial;font-size:24px">DAY</th>
                <th style="font-family:Arial;font-size:24px">HOSPITAL OPEN TIME</th>
                <th style="font-family:Arial;font-size:24px">HOSPITAL CLOSE TIME</th>
                <th style="font-family:Arial;font-size:24px">APPOITMENT</th>

            </tr>
            @foreach (var item in lst.ToList())
            {
                <tr>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.c)</td>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.clinic_start_time</td>
                    <td style="font-family:Arial;font-size:24px">@Html.DisplayFor(modelItem => item.hospital_name)</td>
                    <td style="font-family:Arial;font-size:24px">@Html.ActionLink("Get Appoitment", "GetHospitalAppoitment", "patients")</td>
                </tr>

            }

        </tbody>
    </table>
}
